{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "module": "es6",
    "target": "es5",
    "moduleResolution": "node",
    "jsx": "react",
    "allowJs": true,
    "baseUrl": "./src",
    "paths": {
      "*": ["./*", "./typings/*", "./node_modules/@types/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
